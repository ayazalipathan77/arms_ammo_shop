generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  MANUFACTURER // Was ARTIST
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  AWAITING_CONFIRMATION  // Waiting for manufacturer confirmation
  CONFIRMED              // Manufacturer confirmed, ready to ship
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PurchaseType {
  ORIGINAL
  PRINT // Keeping for now, maybe remove or repurpose?
}

enum ProductType {
  FIREARM
  AMMO
  OPTIC
  ACCESSORY
}

enum AuthProvider {
  LOCAL
  GOOGLE
  FACEBOOK
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String?
  fullName     String
  avatarUrl    String?
  role         Role      @default(USER)
  phoneNumber  String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Auth fields
  resetToken        String?
  resetTokenExpiry  DateTime?
  isEmailVerified   Boolean   @default(false)
  verificationToken String?
  verificationTokenExpiry DateTime?

  // Manufacturer approval (only applies to MANUFACTURER role)
  isApproved        Boolean   @default(false)
  approvedAt        DateTime?
  approvedBy        String?   // Admin user ID who approved

  // Referral system
  referralCode      String?   @unique
  referredBy        String?   // User ID who referred this user

  manufacturerProfile  Manufacturer?
  orders         Order[]
  reviews        Review[]
  cartItems      CartItem[]
  addresses      Address[]
  socialAccounts SocialAccount[]
  favorites      Favorite[]
}

model SocialAccount {
  id             String       @id @default(cuid())
  provider       AuthProvider
  providerUserId String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String
  createdAt      DateTime     @default(now())

  @@unique([provider, providerUserId])
}

model Address {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   @default("SHIPPING") // BILLING, SHIPPING
  address   String
  city      String
  country   String
  zipCode   String?
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Manufacturer { // Was Artist
  id           String   @id @default(uuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id])
  description  String?  // Was bio
  portfolioUrl String?
  countryOfOrigin   String?  // Was originCity
  imageUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  products Product[] // Was artworks
}

model Product { // Was Artwork
  id               String   @id @default(uuid())
  manufacturerId   String?  // Was artistId
  manufacturer     Manufacturer?   @relation(fields: [manufacturerId], references: [id])
  manufacturerName String?  // Was artistName
  title            String
  description      String?
  price            Decimal  @db.Decimal(12, 2)
  currency         String   @default("PKR")
  category         String   // Riffle, Pistol, etc.
  type             ProductType @default(FIREARM)
  
  // New Fields
  caliber          String?
  action           String?
  capacity         String?
  barrelLength     String?
  weight           String?
  
  imageUrl         String
  thumbnailUrl     String?
  additionalImages String[] @default([])
  year             Int
  inStock          Boolean  @default(true)
  viewCount        Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  orderItems OrderItem[]
  reviews    Review[]
  cartItems  CartItem[]
  favorites  Favorite[]

  @@index([manufacturerId])
  @@index([category])
  @@index([inStock])
}

model Order {
  id              String      @id @default(uuid())
  userId          String
  user            User        @relation(fields: [userId], references: [id])
  totalAmount     Decimal     @db.Decimal(12, 2)
  status          OrderStatus @default(PENDING)
  shippingAddress String
  trackingNumber  String?
  paymentMethod   String?
  stripePaymentId String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Order workflow tracking
  paidAt                    DateTime?
  manufacturerNotifiedAt    DateTime?
  manufacturerConfirmedAt   DateTime?
  manufacturerConfirmedBy   String?   // Manufacturer user ID
  adminConfirmedAt          DateTime?
  adminConfirmedBy          String?   // Admin user ID
  shippedAt                 DateTime?
  shippedBy                 String?   // Admin user ID
  deliveredAt               DateTime?
  cancelledAt               DateTime?
  cancellationReason        String?
  adminNotes                String?

  items OrderItem[]
}

model OrderItem {
  id              String       @id @default(uuid())
  orderId         String
  order           Order        @relation(fields: [orderId], references: [id])
  productId       String       // Was artworkId
  product         Product      @relation(fields: [productId], references: [id])
  quantity        Int          @default(1)
  priceAtPurchase Decimal      @db.Decimal(12, 2)
  type            PurchaseType @default(ORIGINAL)
}

model Review {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  productId String   // Was artworkId
  product   Product  @relation(fields: [productId], references: [id])
  rating    Int
  comment   String?
  photos    String[] @default([])
  isVerifiedPurchase Boolean @default(false)

  // Moderation fields
  isApproved Boolean  @default(false)
  approvedAt DateTime?
  approvedBy String?  // Admin user ID
  isRejected Boolean  @default(false)
  rejectedAt DateTime?
  rejectionReason String?

  helpfulCount   Int @default(0)
  unhelpfulCount Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
  @@index([userId])
  @@index([isApproved])
}

model CartItem {
  id        String       @id @default(uuid())
  userId    String
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String       // Was artworkId
  product   Product      @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity  Int          @default(1)
  type      PurchaseType @default(ORIGINAL)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@unique([userId, productId, type])
  @@index([userId])
}

model Conversation {
  id           String   @id @default(uuid())
  title        String
  subtitle     String?
  description  String?
  category     String   @default("WATCH")
  videoId      String   @unique
  thumbnailUrl String?
  duration     String?
  location     String?
  date         DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Setting {
  key       String   @id
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Exhibition { // Maybe repurpose as "Feature Sale" or "Collection"? Keeping for now.
  id          String   @id @default(uuid())
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime?
  location    String
  imageUrl    String
  galleryImages String[] @default([])
  videoUrl    String?
  isVirtual   Boolean  @default(false)
  status      String   @default("UPCOMING") 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Favorite {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String   // Was artworkId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

model GiftCard {
  id            String   @id @default(uuid())
  code          String   @unique
  amount        Decimal  @db.Decimal(12, 2)
  currency      String   @default("PKR")
  balance       Decimal  @db.Decimal(12, 2)
  purchasedBy   String?
  recipientEmail String?
  recipientName String?
  message       String?
  isRedeemed    Boolean  @default(false)
  redeemedBy    String?
  redeemedAt    DateTime?
  expiresAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([code])
  @@index([purchasedBy])
  @@index([redeemedBy])
}
